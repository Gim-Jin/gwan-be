<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kimnjin.gwanyeon.recommand.repository.RecommandRepository">

  <insert id="insert" parameterType="Recommand">
    INSERT INTO recommands (user_id, article_id)
    VALUES (#{userId}, #{articleId})
  </insert>

  <delete id="delete" parameterType="Recommand">
    DELETE FROM recommands
    WHERE article_id = #{articleId} AND user_id = #{userId}
  </delete>

  <select id="countByUserId" parameterType="Long" resultType="int">
    SELECT COUNT(*)
    FROM recommands
    WHERE user_id = #{userId}
  </select>

  <select id="selectByUserIdAndArticleId" parameterType="map" resultType="Recommand">
    SELECT *
    FROM recommands
    WHERE user_id = #{userId} AND article_id = #{articleId}
  </select>

</mapper>